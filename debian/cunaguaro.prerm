#!/bin/sh -e

if [ "$1" = "remove" ] || [ "$1" = "deconfigure" ] ; then
    update-alternatives --remove x-www-browser /usr/bin/cunaguaro
    update-alternatives --remove gnome-www-browser /usr/bin/cunaguaro
fi

if [ "$1" = "remove" ]; then
    rm -f /usr/lib/cunaguaro/components/compreg.dat \
          /usr/lib/cunaguaro/components/xpti.dat
    rm -rf /usr/lib/cunaguaro/updates
fi

